extends layout

block content
	#rsvpContent
		h2 Are you attending?
		h3 Make sure you register by July 27th!
		#alertError
		form#rsvp(name="rsvp", action="")
			.row
				.col-md-4
					.form-group
						.label.label-default(for="email") Contact email
							input.form-control#email.required(type="email",name="email")
				.col-md-4
					.radio
						.label.label-default
							input#yes.required(type="radio",name="attending",value="yes")
							| Definitely!
					.radio
						.label.label-default
							input#no(type="radio",name="attending",value="no")
							| No :(
				#submitGuests.col-md-4
					input#submitRSVP.btn.btn-success(type="submit", value="Submit")
		#attendeeDetails
